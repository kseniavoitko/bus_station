<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="bus_timetable_rule_user" model="ir.rule">
            <field name="name">Bus users can only write and unlink own timetable</field>
            <field name="model_id" ref="model_bus_timetable"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bus_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="bus_route_rule_user" model="ir.rule">
            <field name="name">Bus users can only write and unlink own route</field>
            <field name="model_id" ref="model_bus_route"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_bus_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
