<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="category_bus" model="ir.module.category">
            <field name="name">Bus</field>
            <field name="description">User access levels for the Bus Station</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_bus_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="category_bus"/>
            <field name="comment">Users of the Bus Station</field>
        </record>

        <record id="group_bus_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="category_bus"/>
            <field name="implied_ids" eval="[(4, ref('group_bus_user'))]"/>
            <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
            <field name="comment">Administrators of the Bus Station (full rights)</field>
        </record>

    </data>
</odoo>
